%table{:id => 'contacts'}
  -for contact in @client.contacts      
    #contact.well
      %strong=link_to_if can?(:update, contact), contact.fullname, edit_contact_path(contact)
      %br
      -if contact.display_phone or contact.display_fax
        =h contact.display_phone
        =h contact.display_fax
        %br
      -if contact.email.length > 0  
        %strong Email: 
        =mail_to contact.email
      
      = link_to "Delete", contact, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-small btn-danger pull-right'    
  -if can? :create, Contact
    = link_to "New Contact", new_client_contact_path(@client), :class => 'btn btn-inverse pull-right'
   


