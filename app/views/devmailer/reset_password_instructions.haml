
-content_for :logo do
  -if @resource.company.setting.logo 
    %img{:id => "headerImage campaign-icon", "mc:allowtext" => "", "mc:edit" => "header_image", "mc:label" => "header_image", :src => @resource.company.setting.logo.url, :style => "max-width:180px;"}/
  %h2= @resource.company.name

-content_for :header do
  %h1 Password Change

-content_for :body do
  %table{:width => '600px'}
    %tr
      %td{:align => 'left'}
        %p
          Hello
          =@resource.name        
        %p
          =@resource.company.name
          has requested a link to change your password, and you can do this through the link below.
        %p= link_to 'Change my password', edit_password_url(@resource, :reset_password_token => @resource.reset_password_token, :protocol => 'https')
        %p If you didn't request this, please ignore this email.
        %p Your password won't change until you access the link above and create a new one.
  
