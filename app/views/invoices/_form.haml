-if @invoice.status == "paid"
  %h2 Invoice has been paid, you can copy this invoice or reset to open
-else
  #invoice-main
    =simple_nested_form_for @invoice, :html => {:novalidate => true} do |f|           
      =field_set_tag 'Invoice Details', :id => "form-top", :class => "invoice" do  
        = f.input :title
        = f.input :invoice_date, :label => "Date"
        = f.association :client, :collection => @clients
        %br
        = f.input :business_id, :label => "Your ID"
        = f.input :purchase_order_id, :label => "Order ID"    
      
      =field_set_tag 'Charges',:id => "form-right", :class => "invoice" do
        = f.input :tax_rate, :input_html => {:size => 1}, :label => "Tax %"
        = f.input :delivery_charge, :input_html => {:size => 1}, :label => "Delivery"
        = f.input :late_fee, :input_html => {:size => 1}, :label => "Late Fee"
        = f.input :due_days, :input_html => {:size => 1}, :label => "Due Days"
        = f.input :discount, :input_html => {:size => 4}, :label => "Discount (% or value)"

      =field_set_tag 'Items', :id => "form-main" do
        .fields

          .item_description
            %strong Item Name and Description        
          .item_qty 
            %strong Qty
          .item_cost
            %strong Price
          .item_type 
            %strong / Unit
          .item_tax
            %strong Tax
          .item_remove
          .item_total        
        = f.simple_fields_for :invoice_items
        =f.link_to_add "New Item", :invoice_items                  

      =field_set_tag 'Further Notes', :id => "form-bottom" do
        =f.input_field :notes, :html => {:rows => 2}
      #button
        %button{:type=>"submit",:class=>"red"} Save

    
    

