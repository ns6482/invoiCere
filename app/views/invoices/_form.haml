-if @invoice.status == "paid"
  %h2 Invoice has been paid, you can copy this invoice or reset to open
-else
  =simple_nested_form_for @invoice, :html => {:novalidate => true} do |f|
    =field_set_tag 'Invoice Details', :id => "form-main" do
      = f.input :invoice_date, :label => "Date"
      = f.association :client
      = f.input :title
      = f.input :business_id, :label => "Your ID"
      = f.input :purchase_order_id, :label => "Order ID"
      %br
                 
      .fields
        .item_type 
          %label Type
        .item_description
          %label Description        
        .item_qty 
          %label Qty
        .item_cost
          %label Cost
        .item_tax
          %label Tax
        .item_remove
        .item_total
        
      = f.simple_fields_for :invoice_items
      = f.link_to_add "New Item", :invoice_items
            
      =f.input :notes, :input_html => {:rows => 2}

    =field_set_tag 'Charges', :id => "form-right" do
      = f.input :tax_rate, :input_html => {:size => 3}
      = f.input :delivery_charge, :input_html => {:size => 3}
      = f.input :late_fee, :input_html => {:size => 3}
      = f.input :due_days, :input_html => {:size => 3}

    %button{:type=>"submit",:class=>"red"} Save
    
    

