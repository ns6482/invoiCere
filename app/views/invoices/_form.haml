-if @invoice.status == "paid"
  %h2 Invoice has been paid, you can copy this invoice or reset to open
-else
  #invoice.row
    =simple_nested_form_for @invoice, :html => {:novalidate => true} do |f|      
      =f.error_messages
           
      #form-top.invoice.form-height-long.col-md-9
        .row
          .col-md-5
            = f.input :business_id, :label => "Your ID", :input_html => {:class => ""}, :wrapper_html => {:class => ''}
          .col-md-7
            -if current_company.preference.purchase_order_number =1
              = f.input :purchase_order_id, :label => "Purchase Order ID", :input_html => {:class => ""}, :wrapper_html => {:class => ''}
        .row
        = f.input :title, :label_html => {:class => "label_narrow"}, :input_html => {:class => 'input-block-level'}
        = f.association :client, :collection => @clients, :label_html => {:class => "label_narrow"}, :input_html => {:class => 'input-block-level'}
        = f.input :invoice_date, :label => "Date", :label_html => {:class => "label_narrow"}, :input_html => {:class => 'input-small'}

        = f.input :currency, :collection => @currencies, :selected => @invoice.currency.downcase, :required => true , :include_blank => false
        
      #form-right.invoice.form-height-long.col-md-2
        .fields
          = f.input :tax_rate, :input_html => {:size => 1}, :label => "Tax %", :label_html => {:class => "label_narrow"}, :input_html => {:class => 'input-small'}
          = f.input :delivery_charge_cents, :input_html => {:size => 1}, :label => "Shipping", :label_html => {:class => "label_narrow"}, :input_html => {:class => 'input-small'}
          = f.input :due_days, :input_html => {:size => 1}, :label => "Due Days", :label_html => {:class => "label_narrow"}, :input_html => {:class => 'input-small'}
          = f.input :discount, :input_html => {:size => 4}, :label => "Discount (% or value)", :label_html => {:class => "label_narrow"}, :input_html => {:class => 'input-small'}
          = f.input :late_fee_cents, :input_html => {:size => 1}, :label => "Late Fee", :label_html => {:class => "label_narrow"}, :input_html => {:class => 'input-small'}

      #form-main.col-md-9
        %h3 Items
        .row
          .col-xs-3
            %strong Item       
          .col-xs-2
            %strong Qty
          .col-xs-2
            %strong Price
          .col-xs-2 
            %strong Unit
          .col-xs-1
            %strong Tax
          .col-xs-1    
                                
        = f.simple_fields_for :invoice_items
        = f.link_to_add '<i class="glyphicon glyphicon-plus-sign"></i> Add'.html_safe, :invoice_items, :class => "btn btn-small" 
     
        
      #footer-notes.col-md-8        
        %h3 Further Notes          
        =f.input_field :notes, :rows => 2, :class=> 'input-block-level'
                    
      #footer-pay.col-md-12
        %h3 Client can pay by:
        =f.input :payables, :as => :check_boxes, :collection => Invoice::PAYABLES, :item_wrapper_class => 'checkbox-inline ', :label => ''
       
        %button.btn.btn-primary.btn-default.pull-right{:type=>"submit"} Save Invoice
        
     
      
    


    
    

