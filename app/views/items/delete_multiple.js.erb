$("#dashboard-centre").prepend("<%= escape_javascript(render "shared/flash", :name => :notice, :msg => flash.discard(:notice) )%>");
$(".notice").fadeOut(3000);
<%- @items_to_delete.each do | i |  %>
	$("#item-row-" + "<%= escape_javascript(i.id.to_s) %>").animate({
	    opacity: 0.0,
	    left: '+=50',
	    height: 'toggle'
	  }, 1000, function() {
	    // Animation complete.
			$(".removed").slideUp();			
	  });
	  $("#item-row-" + "<%= escape_javascript(i.id.to_s) %>").remove();
<%- end %>