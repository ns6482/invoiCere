- title "Items"

-if @items.length > 0

 =form_tag delete_multiple_items_path, :method => :delete, :remote => true do
  -if can? :delete, Item
   = submit_tag 'Delete', :name =>'commit', :value => 'Delete', :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger'
   %table{:class => "table table-striped"}
    %thead
     %tr
      %th
      %th Name
      %th Description
      %th Unit
      %th Price
    %tbody
     - for item in @items
      %tr{:id => "item-row-" + item.id.to_s, :class=>"table-row " + cycle("odd", "even")}
       %td= check_box_tag "item_ids[]", item.id
       %td= link_to item.name, edit_item_path(item)
       %td= item.description
       %td= item.unit
       %td= item.price
-else
 -if can? :create, Item
  No Items setup, create a new item
  = link_to " now", new_item_path  

=content_for :right do
 %ul
  %li
   -if can? :create, Item
    = link_to "New Item", new_item_path
  %li
   -if can? :read, Item
    = link_to "Export", items_path(:format => 'csv')
