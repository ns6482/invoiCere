.pagination
 :text-align center
 :padding .3em
 a, span, em
  :padding .2em .5em
 span.disabled
  :color #AAA
 em
 :font-weight bold
 :color #FF0084
 a
  :border 1px solid #DDDDDD
  :color #0063DC
  :text-decoration none
  &:hover, &:focus
   :border-color #003366
   :background #0063DC
   :color white
.page_info
 :color #aaa
 :padding-top .8em
.prev_page, .next_page
 :border-width 2px
prev_page
 :margin-right 1em
 .next_page
 :margin-left 1em